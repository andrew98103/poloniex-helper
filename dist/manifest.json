{
	"version": "0.0.5",
	"manifest_version": 2,
	"name": "Poloniex Helper",
	"description": "Some simple addons to help with Poloniex",
	"offline_enabled": true,

	"permissions": [
		"storage",
		"contentSettings",
		"unlimitedStorage",
		"contextMenus"
	],

	"icons" : {
		"16" : "icon-sm.png",
		"32" : "icon-md.png",
		"48" : "icon-lg.png"
	},

	"content_scripts": [ {
		"matches": [ "https://poloniex.com/*" ],
		"js": [ "jquery-3.1.1.min.js", "jquery-ui.min.js", "initializer.js" ],
		"css": [ "jquery-ui.css", "style.css", "font-awesome.min.css" ],
		"run_at": "document_idle"
	} ],
	"web_accessible_resources": [ "user.js", "style.css" ]
}